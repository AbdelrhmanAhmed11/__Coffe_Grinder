<Page x:Class="Coffe_Grinder.Adminhomepage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Coffe_Grinder"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="Admin Dashboard">

    <Page.Resources>
        <!-- DataGrid Header Style -->
        <Style x:Key="DataGridHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#5D4037"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Dashboard Button Style -->
        <Style x:Key="DashboardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#8D6E63"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6D4C41"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Loading Indicator Style -->
        <Style x:Key="LoadingIndicatorStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Low Stock Alert Style -->
        <Style x:Key="LowStockAlertStyle" TargetType="Border">
            <Setter Property="Background" Value="#4E342E"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="adminbg.png" Stretch="UniformToFill" Opacity="0.9"/>
        </Grid.Background>

        <!-- Main Grid Layout -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Border Grid.Row="0" Background="#3E2723" CornerRadius="8" Padding="10" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="coffe_icon.png" Width="40" Height="40" Margin="0,0,10,0"/>
                    <TextBlock Text="COFFEE GRINDER ADMIN DASHBOARD" 
                               FontSize="24" FontWeight="Bold" Foreground="Wheat"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Main Content Section -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Coffee Inventory Section -->
                <Border Grid.Column="0" Background="#5D4037" CornerRadius="8" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <Image Source="coffebeans.png" Width="24" Height="24" Margin="0,0,10,0"/>
                            <TextBlock Text="COFFEE INVENTORY" FontSize="18" FontWeight="Bold" Foreground="Wheat"/>
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <DataGrid x:Name="CoffeeDataGrid" 
                                     AutoGenerateColumns="False" IsReadOnly="True"
                                     HeadersVisibility="Column" RowHeight="35" FontSize="14"
                                     Background="Transparent" Foreground="White" BorderThickness="0"
                                     ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                     HorizontalGridLinesBrush="#6D4C41" VerticalGridLinesBrush="#6D4C41"
                                     RowBackground="Transparent" AlternatingRowBackground="#4E342E">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Coffee" Binding="{Binding CoffeeName}" Width="2*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Padding" Value="10,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Type" Binding="{Binding CoffeeType.TypeName}" Width="1.5*"/>
                                    <DataGridTextColumn Header="Stock (kg)" Binding="{Binding QuantityInStock}" Width="1*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Padding" Value="0,0,10,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Price/kg" Binding="{Binding PricePerKg, StringFormat=C}" Width="1*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Padding" Value="0,0,10,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock x:Name="CoffeeLoadingIndicator" Text="Loading coffee inventory..." 
                                       Style="{StaticResource LoadingIndicatorStyle}"/>
                        </Grid>

                        <Button Grid.Row="2" Content="MANAGE INVENTORY" Click="ManageInventory_Click"
                                Style="{StaticResource DashboardButtonStyle}"/>
                    </Grid>
                </Border>

                <!-- Orders Section -->
                <Border Grid.Column="2" Background="#3E2723" CornerRadius="8" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <Image Source="ordericon.png" Width="24" Height="24" Margin="0,0,10,0"/>
                            <TextBlock Text="RECENT ORDERS" FontSize="18" FontWeight="Bold" Foreground="Wheat"/>
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <DataGrid x:Name="OrdersDataGrid" 
                                     AutoGenerateColumns="False" IsReadOnly="True"
                                     HeadersVisibility="Column" RowHeight="35" FontSize="14"
                                     Background="Transparent" Foreground="White" BorderThickness="0"
                                     ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                     HorizontalGridLinesBrush="#6D4C41" VerticalGridLinesBrush="#6D4C41"
                                     RowBackground="Transparent" AlternatingRowBackground="#4E342E">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Order #" Binding="{Binding OrderID}" Width="0.8*"/>
                                    <DataGridTextColumn Header="Date" Binding="{Binding OrderDate, StringFormat={}{0:MM/dd/yyyy}}" Width="1*"/>
                                    <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="1.5*"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding OrderStatus.StatusName}" Width="1*"/>
                                    <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice, StringFormat=C}" Width="1*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Padding" Value="0,0,10,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock x:Name="OrdersLoadingIndicator" Text="Loading recent orders..." 
                                       Style="{StaticResource LoadingIndicatorStyle}"/>
                        </Grid>

                        <Button Grid.Row="2" Content="VIEW ALL ORDERS" Click="ViewAllOrders_Click"
                                Style="{StaticResource DashboardButtonStyle}"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Low Stock Alerts Section -->
            <Border Grid.Row="2" Background="#5D4037" CornerRadius="8" Margin="0,10,0,0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <Image Source="alerticon.png" Width="24" Height="24" Margin="0,0,10,0"/>
                        <TextBlock Text="LOW STOCK ALERTS (Under 10kg)" FontSize="18" FontWeight="Bold" Foreground="Wheat"/>
                    </StackPanel>

                    <ListBox Grid.Row="1" x:Name="LowStockList" 
                             Background="Transparent" BorderThickness="0" 
                             Foreground="White" FontSize="14"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource LowStockAlertStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding CoffeeName}" FontWeight="Bold" Foreground="LightYellow"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Current Stock:" Margin="0,0,5,0" Foreground="White"/>
                                            <TextBlock Text="{Binding QuantityInStock}" Foreground="OrangeRed" FontWeight="Bold"/>
                                            <TextBlock Text="kg" Margin="5,0,0,0" Foreground="White"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Type:" Margin="0,0,5,0" Foreground="White"/>
                                            <TextBlock Text="{Binding CoffeeType.TypeName}" Foreground="Wheat" FontStyle="Italic"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>