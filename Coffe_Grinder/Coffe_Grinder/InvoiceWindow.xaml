<Window x:Class="Coffe_Grinder.InvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Coffe_Grinder"
        Title="Invoice" Height="500" Width="400"
        Icon ="Coffe_Grinder.ico"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Add the converter -->
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <!-- Styles -->
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="25"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#5D4037"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#6D4C41"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5D4037"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Correct RowDefinitions INSIDE the Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="COFFEE GRINDER" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="INVOICE" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
            <TextBlock x:Name="InvoiceNumber" FontSize="14" HorizontalAlignment="Center"/>
            <TextBlock x:Name="InvoiceDate" FontSize="12" HorizontalAlignment="Center"/>
            <TextBlock x:Name="CustomerName" FontSize="12" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Order Details -->
        <DataGrid Grid.Row="1" x:Name="InvoiceItems" Margin="20,0"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item" Binding="{Binding CoffeeInventory.CoffeeName}" Width="2*"/>
                <DataGridTextColumn Header="Qty (kg)" Binding="{Binding Quantity}" Width="0.5*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="1*"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Order Notes -->
        <StackPanel Grid.Row="2" Margin="20,10"
                    Visibility="{Binding ElementName=OrderNotes, Path=Text, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="Order Notes:" FontWeight="Bold"/>
            <Border BorderBrush="#8D6E63" BorderThickness="1" Padding="5" Background="White">
                <TextBlock x:Name="OrderNotes" TextWrapping="Wrap"/>
            </Border>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="3" Margin="20,10">
            <TextBlock x:Name="TotalAmount" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right"/>
            <Button Content="Print" Click="Print_Click" HorizontalAlignment="Center" Margin="0,20"/>
        </StackPanel>
    </Grid>
</Window>
