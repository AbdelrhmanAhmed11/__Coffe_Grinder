<Page x:Class="Coffe_Grinder.Admin_login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Coffe_Grinder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin Login">

    <Grid>
        <!-- Background with overlay for better text visibility -->
        <Grid.Background>
            <ImageBrush ImageSource="Admin_login.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Semi-transparent overlay -->
        <Rectangle Fill="#80000000" Grid.ColumnSpan="3" Grid.RowSpan="3"/>

        <!-- Main content grid -->
        <Grid Grid.Column="1" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Welcome header -->
            <Border Grid.Row="0" Background="#803E2723" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <TextBlock Text="Welcome Admin" 
                          Foreground="#F5F5DC" 
                          FontSize="32" 
                          FontWeight="Bold"
                          FontFamily="Segoe UI"
                          TextAlignment="Center"/>
            </Border>

            <!-- Login form -->
            <Border Grid.Row="1" Background="#80FFFFFF" CornerRadius="8" Padding="30,25,30,30">
                <StackPanel>
                    <!-- Username field with label beside it - centered -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15" VerticalAlignment="Center">
                        <TextBlock Text="Username:" 
                                  Foreground="#5D4037" 
                                  FontWeight="SemiBold" 
                                  FontSize="14"
                                  Margin="0,0,10,0"
                                  VerticalAlignment="Center"/>

                        <TextBox x:Name="UsernameTextBox" 
                                 Width="250" 
                                 Height="40" 
                                 FontSize="14" 
                                 Padding="10" 
                                 BorderBrush="#8D6E63" 
                                 Margin="0,0,50,0"
                                 BorderThickness="1.5"
                                 Background="#FFF8F1E6"
                                 Foreground="#5D4037"
                                 CaretBrush="#5D4037"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Password field with label beside it - centered -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Center">
                        <TextBlock Text="Password:" 
                                  Foreground="#5D4037" 
                                  FontWeight="SemiBold" 
                                  FontSize="14"
                                  Margin="0,0,10,0"
                                  VerticalAlignment="Center"/>

                        <PasswordBox x:Name="PasswordBox" 
                                     Width="250" 
                                     Height="40" 
                                     FontSize="14" 
                                     Margin="0,0,45,0"
                                     Padding="10" 
                                     BorderBrush="#8D6E63" 
                                     BorderThickness="1.5"
                                     Background="#FFF8F1E6"
                                     Foreground="#5D4037"
                                     VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Login button -->
                    <Button Content="Login" 
                            Width="200" 
                            Height="45" 
                            Background="#6D4C41" 
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderBrush="#5D4037"
                            BorderThickness="1"
                            Click="Button_Click"
                            Cursor="Hand"
                            HorizontalAlignment="Center"
                            Margin="20,5,0,0">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                        </Button.Effect>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Footer note -->
            <TextBlock Grid.Row="2" 
                       Text="© 2025 Coffee Grinder Admin System" 
                       Foreground="#F5F5DC" 
                       FontSize="12" 
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"/>
        </Grid>
    </Grid>
</Page>